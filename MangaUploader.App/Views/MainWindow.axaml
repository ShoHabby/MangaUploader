<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MangaUploader.Core.ViewModels;assembly=MangaUploader.Core"
        xmlns:m="clr-namespace:MangaUploader.Core.Models;assembly=MangaUploader.Core"
        xmlns:bh="clr-namespace:MangaUploader.Behaviours"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Xaml.Behaviors.Interactivity"
        xmlns:ail="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="800"
        MinWidth="300" MinHeight="400" Padding="10"
        x:CompileBindings="True"
        x:Class="MangaUploader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/maribshohabby.ico"
        Title="Manga Uploader">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel LastChildFill="False" VerticalSpacing="5">
        <DockPanel DockPanel.Dock="Top" HorizontalSpacing="10">
            <Border DockPanel.Dock="Left" ClipToBounds="True" CornerRadius="{Binding AvatarCornerRadius}">
                <ail:AdvancedImage Source="{Binding AvatarURL}" Width="{Binding AvatarSize}" Height="{Binding AvatarSize}" />
            </Border>
            <TextBlock DockPanel.Dock="Left" Text="{Binding Username}" VerticalAlignment="Center" />
            <Button DockPanel.Dock="Right" Command="{Binding ConnectCommand}"
                    Content="{Binding ConnectButtonText}" HorizontalContentAlignment="Center"
                    Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock DockPanel.Dock="Right" Text="{Binding DeviceFlowCode}"
                       VerticalAlignment="Center" HorizontalAlignment="Right" />
        </DockPanel>
        <Label DockPanel.Dock="Top" Content="Repositories" Target="RepositoriesAutoCompleteBox" />
        <AutoCompleteBox DockPanel.Dock="Top" Name="RepositoriesAutoCompleteBox" ItemsSource="{Binding Repositories}"
                         FilterMode="ContainsOrdinal">
            <i:Interaction.Behaviors>
                <bh:DropdownItemsOnlyBehaviour/>
            </i:Interaction.Behaviors>
        </AutoCompleteBox>
    </DockPanel>

</Window>

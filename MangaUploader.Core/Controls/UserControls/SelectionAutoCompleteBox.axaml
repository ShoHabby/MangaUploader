<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Xaml.Behaviors.Interactivity"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100" x:Name="Root"
             x:Class="MangaUploader.Core.Controls.UserControls.SelectionAutoCompleteBox">

    <AutoCompleteBox Name="AutoCompleteBox" Padding="8" VerticalAlignment="Center" FilterMode="ContainsOrdinal"
                     ItemsSource="{Binding ItemsSource, ElementName=Root}"
                     SelectedItem="{Binding SelectedItem, ElementName=Root}">
        <i:Interaction.Behaviors>
            <DropdownItemsOnlyBehaviour />
        </i:Interaction.Behaviors>
        <AutoCompleteBox.InnerRightContent>
            <Button Content="{Binding SelectButtonContent, ElementName=Root}"
                    Command="{Binding SelectCommand, ElementName=Root}" Margin="2" />
        </AutoCompleteBox.InnerRightContent>
    </AutoCompleteBox>

</UserControl>
